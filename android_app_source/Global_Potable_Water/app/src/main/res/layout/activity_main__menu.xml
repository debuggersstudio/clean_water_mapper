<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/zr"
    android:screenOrientation="portrait"
    tools:context="com.stepsbd.iub_quarks.global_potable_water.Main_Menu">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Report Polluted Water Spots"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="128dp"
        android:layout_alignParentEnd="true"
        android:textSize="15dp"
        android:textColor="#fff4fcff"
        android:color="#e20aedff"
        android:alpha="0.80"
        android:background="@drawable/green"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Submit Clean Water Info"
        android:id="@+id/clean_water_info"
        android:textSize="15dp"
        android:textColor="#fff4fcff"
        android:color="#e20aedff"
        android:alpha="0.80"
        android:layout_marginTop="10dip"
        android:background="@drawable/green"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Find Clean Water Nearby"
        android:id="@+id/button3"
        android:textSize="15dp"
        android:textColor="#fff4fcff"
        android:color="#e20aedff"
        android:alpha="0.80"
        android:background="@drawable/green"
        android:layout_marginTop="10dip"
        android:layout_below="@+id/clean_water_info"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Report A Water Scarcity"
        android:id="@+id/button4"
        android:textSize="15dp"
        android:textColor="#fff4fcff"
        android:color="#e20aedff"
        android:alpha="0.80"
        android:background="@drawable/green"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button3"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="5dip"


        />
</RelativeLayout>
